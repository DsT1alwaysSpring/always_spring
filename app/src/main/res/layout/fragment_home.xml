<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/textViewLogin"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center|end"
        android:text="로그인/회원가입"
        android:textAlignment="viewEnd"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="내 주변 친구 추천"
                    android:textColor="@color/main"
                    android:textSize="20sp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView1"
                    android:layout_width="100dp"
                    android:layout_marginEnd="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/a" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView2"
                    android:layout_width="100dp"
                    android:layout_marginEnd="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/b" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView3"
                    android:layout_width="100dp"
                    android:layout_marginEnd="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/c" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/main"
                    android:text="오늘의 인기 게시글"
                    android:textSize="20sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textSlideshow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3/1 등산 멤버 구합니다."
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/post_content1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="변동사항 있으면 공지하겠습니다. 멤버가 가득차면 종료됩니다."
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/post_title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="중고물품 거래합니다."
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/post_content2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="새로 선물 받아서 기존에 쓰던 청소기를 처분합니다."
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/post_title3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="꽃꽂이 취미로 같이 해요"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/post_content3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="마음맞는 분들과 함께하고싶습니다^^"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/post_title4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="금정구 수영하는 곳 추천해주세요"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/post_content4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="기존에 다니던 수영시설을 옮기게 돼서 추천받습니다."
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/post_title5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="저녁식사 함께 하실분"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/post_content5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="인원충당되면 글 내립니다."
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/post_title6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="노인정 어디 많이 가나요"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/post_content6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="이사와서 지리를 잘 모릅니다."
                        android:textColor="@android:color/black" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
